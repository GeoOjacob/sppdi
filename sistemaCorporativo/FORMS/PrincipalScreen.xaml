            <ImageBrush ImageSource="/sistemaCorporativo;component/IMAGES/Wallpaper Oficial SPPDI material.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="221*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
