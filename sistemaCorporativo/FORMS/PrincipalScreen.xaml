                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Settings_FLAT.png" Margin="30,11,0,0"  Width="69.5" Height="64.002"/>
                </Controls:Tile>

                <Label Content="Ferramentas" HorizontalAlignment="Left" Margin="566,2.017,0,0" VerticalAlignment="Top" FontFamily="Segoe WP Light" FontSize="29.333"/>

                <Label Content="Cadastro" HorizontalAlignment="Left" Margin="27,2.017,0,0" VerticalAlignment="Top" FontFamily="Segoe WP Light" FontSize="29.333"/>

                <Controls:Tile Margin="687,344.034,792.5,74.964" Height="Auto" Width="Auto" TiltFactor="2" ToolTip="Comparar Assinatura">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Assinatura_FLAT.png" Margin="67,21,10,0"  Width="115.5" Height="140.002"/>
                </Controls:Tile>
                <Controls:Tile Margin="566,344.034,914,74.966" Height="Auto" Width="Auto" TiltFactor="2" Title="" ToolTip="Analisar DNA">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/dna_FLAT.png" Margin="84,18,10,0"  Height="120" Width="150"/>
                </Controls:Tile>
                <Controls:Tile Margin="566,243.035,792.5,174.966" Height="Auto" Width="Auto" TiltFactor="2" Title="Reconhecimento Facial">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Reconhecimento_Facial_FLAT.png" Margin="69,16,10,0"  Height="120.999" Width="237.5"/>
                </Controls:Tile>
                <Controls:Tile Margin="566,51.034,792.5,275.965" Height="Auto" Width="Auto" TiltFactor="2" Title="Comparar Impressão Digital">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Finger_Print_tools_FLAT.png" Margin="146,27,10,0"  Height="280.001" Width="250.5"/>
                </Controls:Tile>
                <Controls:Tile Margin="242,243,1116,175" Height="Auto" Width="Auto" Click="Tile_Click_2" Title="Cadastrar Ocorrência">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Ocorrencia_FLAT.png" Margin="168,2,90,0"  Height="149.999" Width="270.5"/>
                </Controls:Tile>
                <Controls:Tile Margin="242.5,344.034,1237.5,74.964" Height="Auto" Width="Auto" Click="Tile_Click_3" Title="" ToolTip="Cadastrar Denuncia">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Denuncia_Normal_FLAT.png" Margin="73,12,10,0"  Height="121" Width="250"/>
                </Controls:Tile>
                <Controls:Tile Margin="363.5,344.034,1116.5,74.966" Height="Auto" Width="Auto" Click="Tile_Click_4" ToolTip="Cadastrar Denuncia Anônima">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Denuncia_Anonima_FLAT.png" Margin="85,19,10,0"  Height="131" Width="250"/>
                </Controls:Tile>
                <Controls:Tile Margin="242,51.034,1116.5,275.965" Height="Auto" Width="Auto" Click="Tile_Click_1" Title="Cadastrar Viatura">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Viatura_FLAT.png" Margin="118,53,10,0"  Height="229" Width="240" Stretch="Fill"/>
                </Controls:Tile>
                <Controls:Tile Margin="27,51.036,1359,74.964" Height="Auto" Width="Auto" Click="Tile_Click" Title="Cadastrar Agente" >
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Police_man_menu_FLAT.png" Margin="169,105,10,10" Height="273" Width="312"/>
                </Controls:Tile>
                <Controls:Tile Margin="883.5,51.034,653,409.964" Height="Auto" Width="Auto" TiltFactor="2" ToolTip="Sobre">
                    <Controls:Tile.Background>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
                    </Controls:Tile.Background>
                    <Image Source="/sistemaCorporativo;component/IMAGES/Sobre_FLAT.png" Margin="52,9,0,0" Width="79.5" Height="75.002"/>
                </Controls:Tile>

            </Grid>
        </ScrollViewer>
        <Menu IsMainMenu="True" Height="29" VerticalAlignment="Top">
            <MenuItem Header="Cadastrar" Width="72.937">
                <MenuItem Header="Investigação">
                    <MenuItem Header="Denuncia" Click="DenunciaMenuItem_Click" />
                    <MenuItem Header="Denuncia Anônima" Click="DenunciaAnonMenuItem_Click" />
                    <MenuItem Header="Ocorrência" Click="OcorrenciaMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="Departamento" Click="MenuItem_Click" >
                    <MenuItem Header="Agente" Click="AgenteMenuItem_Click"/>
                    <MenuItem Header="Viatura" Click="ViaturaMenuItem_Click"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Consultar" Width="72.937">
                <MenuItem Header="Investigação" >
                    <MenuItem Header="Crime"/>
                    <MenuItem Header="Criminoso"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Ajuda" Width="56.46" >
                <MenuItem Header="Sobre"/>
            </MenuItem>
        </Menu>

    </Grid>

    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl x:Name="FlyoutPrincipal">
            <Controls:Flyout x:Name="flyoutAgente" Width="304.5" Grid.RowSpan="2" AllowDrop="False" AllowFocusElement="True" IsPinned="False" AnimateOnPositionChange="True" Theme="Adapt">
                <Canvas>
                    <Label Content="Nome do Agente" Canvas.Left="68" Canvas.Top="162" Width="171.167" FontFamily="Segoe WP Light" FontSize="21.333"/>
                    <Label Content="Nível:" Canvas.Left="10" Canvas.Top="234.22" FontFamily="Segoe WP SemiLight" FontSize="13.333"/>
                    <Label Content="Cargo:" Canvas.Left="10" Canvas.Top="261.953" FontFamily="Segoe WP SemiLight" FontSize="13.333"/>
                    <Button x:Name="btnFzrLogoff" Content="Fazer logoff" Canvas.Top="619" Width="304.5" Height="34.333" FontSize="10.667" FontFamily="Segoe UI Light" Background="#FF262626" Foreground="White" Click="btnFzrLogoff_Click"/>
                    <Controls:ToggleSwitch x:Name="tgsTema" Header="Tema Claro" Canvas.Left="10" Canvas.Top="509.72" Height="64.28" Width="109.83" Checked="tgsTema_Checked" IsCheckedChanged="tgsTema_IsCheckedChanged" Content="" />
                    <Image Height="157" Canvas.Left="68" Width="168.667" Source="/sistemaCorporativo;component/IMAGES/User_Login adapt.png"/>
                    <Label Content="Casos resolvidos:" Canvas.Left="10" Canvas.Top="289.686" FontFamily="Segoe WP SemiLight" FontSize="13.333"/>

                </Canvas>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>

</Controls:MetroWindow>
